<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/imageView_bookList_bookIcon"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_bookList_bookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/imageView_bookList_bookIcon"
        app:layout_constraintTop_toTopOf="@+id/imageView_bookList_bookIcon" />

    <TextView
        android:id="@+id/textView_bookList_bookAuthor"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView_bookList_bookTitle"
        app:layout_constraintTop_toBottomOf="@+id/textView_bookList_bookTitle" />

    <TextView
        android:id="@+id/textView_bookList_bookSellPrice"
        android:layout_width="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView_bookList_bookAuthor"
        app:layout_constraintTop_toBottomOf="@+id/textView_bookList_bookAuthor" />

    <TextView
        android:id="@+id/textView_likeList_bookQuality"
        android:layout_width="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView_bookList_bookSellPrice"
        app:layout_constraintTop_toBottomOf="@+id/textView_bookList_bookSellPrice" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_likeList_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/gray_color"
        app:layout_constraintTop_toBottomOf="@id/textView_likeList_bookQuality" />




</androidx.constraintlayout.widget.ConstraintLayout>