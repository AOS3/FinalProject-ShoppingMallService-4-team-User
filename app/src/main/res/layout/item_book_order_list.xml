<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#F4F9FF"
    android:backgroundTint="#F4F9FF">

    <TextView
        android:id="@+id/textView_orderList_listCountNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text="(1)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_orderList_bookIcon"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/test_book_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_orderList_bookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="깡 샘의 안드로이드 앱 프로그래밍 with 코틀린"
        app:layout_constraintStart_toEndOf="@+id/imageView_orderList_bookIcon"
        app:layout_constraintTop_toTopOf="@+id/imageView_orderList_bookIcon" />

    <TextView
        android:id="@+id/textView_orderList_bookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="강성윤"
        app:layout_constraintStart_toStartOf="@+id/textView_orderList_bookTitle"
        app:layout_constraintTop_toBottomOf="@+id/textView_orderList_bookTitle" />

    <TextView
        android:id="@+id/textView_orderList_bookSellPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="판매가 : 40,000원"
        app:layout_constraintStart_toStartOf="@+id/textView_orderList_bookAuthor"
        app:layout_constraintTop_toBottomOf="@+id/textView_orderList_bookAuthor" />

    <TextView
        android:id="@+id/textView_likeList_bookQuality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="품질 : 중"
        app:layout_constraintStart_toStartOf="@+id/textView_orderList_bookSellPrice"
        app:layout_constraintTop_toBottomOf="@+id/textView_orderList_bookSellPrice" />

    <TextView
        android:id="@+id/textView_likeList_bookCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="수량 : 1개"
        app:layout_constraintStart_toEndOf="@+id/textView_likeList_bookQuality"
        app:layout_constraintTop_toTopOf="@+id/textView_likeList_bookQuality" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_likeList_bookCount" />


</androidx.constraintlayout.widget.ConstraintLayout>